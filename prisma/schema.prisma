generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @map("_id")
  email    String    @unique
  name     String
  posts   Post[]
}

model Post{
  id String @id @default(uuid()) @map("_id")
  title String
  focus String
  content String
  anonymous Boolean
  image String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}